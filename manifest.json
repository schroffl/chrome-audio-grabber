{
	"manifest_version": 2,

	"name": "Chrome Audio Grabber",
	"description": "Capture a tabs audio",
	"version": "0.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Capture Audio",
		"default_popup": "ui/html/popup.html"
	},

	"permissions": [
		"<all_urls>",
		"tabCapture",
		"storage"
	],
	
	"background": {
		"scripts": [
			"js/lockr.js",
			"js/config.js",
			"js/capture.js",
			"js/modes.js",
			"js/index.js"
		]
	}
}