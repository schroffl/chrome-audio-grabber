{
	"manifest_version": 2,

	"name": "Audio Grabber",
	"description": "Capture a tabs audio",
	"version": "0.1.0",
	"author": "schroffl",

	"browser_action": {
		"default_icon": {
			"128": "icon.png"
		},
		"default_title": "Capture Audio"
	},
	"options_page": "ui/html/options.html",

	"permissions": [
		"<all_urls>",
		"tabCapture",
		"storage"
	],

	"background": {
		"scripts": [
			"js/lockr.js",
			"js/config.js",
			"js/capture.js",
			"js/modes.js",
			"js/index.js"
		],
		"persistent": true
	}
}